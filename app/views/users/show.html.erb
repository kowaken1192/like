<h3>ユーザー予定一覧</h3>

<table>
<tr>
  <th>タイトル</th>
  <td><%= @user.title %></td>
</tr>
<tr>
  <th>開始日</th>
  <% if @user.start_date %>
  <td><%= @user.start_date.to_formatted_s(:custom_format) %></td>
  <% else %>
  <td></td>
  <% end %>
</tr>
<tr>
  <th>終了日</th>
  <% if @user.end_date %>
  <td><%= @user.end_date.to_formatted_s(:custom_format) %></td>
  <% else %>
  <td></td>
  <% end %>
</tr>
   
  <tr>
    <th>終日</th>
    <td><%= @user.all_day%></td>
  </tr>
    <th>更新日</th>
    <td><%= @user.updated_at.to_formatted_s(:datetime_jp) %></td>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @user.schedule %></td>
  </tr>

</table>

<div>
  <ul>
    <li><%= link_to "ユーザー情報一覧に戻る", :users %></li>
  </ul>
</div>